{
    "architecture":{
        "ernie":"./configs/ernie_config/ernie_base.json",
        "cls_header":{
            "num_labels":11
        },
        "visual_backbone":{
            "module":"model.backbones.resnet_vd",
            "class":"ResNetVd",
            "params":{
                "layers":50
            },
            "fpn_dim":128
        },
        "embedding":{
            "roi_width":64,
            "roi_height":4,
            "rel_pos_size":36,
            "spa_pos_size":256,
            "max_seqlen":512,
            "max_2d_position_embedding":512
        }
    },
    "eval":{
        "feed_names":[
            "images",
            "sentence",
            "sentence_ids",
            "sentence_pos",
            "sentence_mask",
            "sentence_bboxes",
            "label",
            "label_mask"
        ],
        "loader":{
            "collect_batch":false,
            "num_workers":5
        },
        "metric":[
            {
                "name":"labeling_cls",
                "label_names":["other", "grade", "subject", "school", "test time", "class", "name", "examination number", "score", "seat number", "student number"],
                "ignore_idx":[0],
                "main_indicator":"token",
                "type":"TabClsMetric"
            }
        ],
        "dataset":{
            "data_path":"",
            "image_path":"",
            "dict_path":"./configs/ernie_config/vocab.txt",
            "dict_params":{
                "lower":true,
                "unk_token":"[UNK]",
                "sep_token":"[SEP]",
                "cls_token":"[CLS]",
                "pad_token":"[PAD]",
                "img_token":"[IMG]",
                "mask_token":"[MASK]"
            },
            "batch_size":1,
            "shuffle":false,
            "image_shape":[
                512,
                512
            ],
            "transform":{
                "img_mode":"RGB",
                "channel_first":false,
                "scale":"1./255",
                "mean":[
                    0.485,
                    0.456,
                    0.406
                ],
                "std":[
                    0.229,
                    0.224,
                    0.225
                ],
                "order":"",
                "to_chw":true
            }
        }
    }
}
