{
    "architecture":{
        "image_module":{
            "name":"V2Net",
            "out_channels":128
        },
        "det_module":{
            "model_name":"small",
            "loss_weight":1
        },
        "recg_module":{
            "method":"decoder",
            "num_classes":95,
            "max_seq_len":32,
            "recg_loss":"CE",
            "loss_weight":1,
            "decoder_layers":6,
            "return_intermediate_dec":true
        },
        "postprocess":{
            "thresh":0.3,
            "box_thresh":0.7,
            "max_candidates":1000,
            "unclip_ratio":0.63,
            "score_mode":"fast"
        }
    },
    "metric":[
        {
            "name":"funsd_ned",
            "type":"OCRMetric"
        }
    ],
    "eval":{
        "results_dir": "./result",
        "feed_names":[
            "image",
            "bboxes_padded_list",
            "bboxes_4pts_padded_list",
            "texts_padded_list",
            "classes_padded_list",
            "masks_padded_list",
            "ratio",
            "org_image",
            "image_name"
        ],
        "loader":{
            "collect_batch":true,
            "num_workers":0,
            "shuffle":false,
            "drop_last":false,
            "use_shared_memory":false
        },
        "dataset":{
            "data_path":"./data/funsd/testing_data/annotations/",
            "image_path":"./data/funsd/testing_data/image",
            "batch_size":1,
            "shuffle":false,
            "max_seq_len":31,
            "recg_loss":"CE",
            "transform":[
                {
                    "DecodeImage":{
                        "img_mode":"BGR",
                        "channel_first":false
                    }
                },
                {
                    "DBTextSpottingTest":{
                        "max_side_len":1920,
                        "max_bbox_num":512,
                        "max_seq_len":31
                    }
                }
            ]
        }
    }
}
